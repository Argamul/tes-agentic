# Production Environment Configuration for NLP/AI Service

# =============================================================================
# API Keys and Authentication
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis-service:6379/0
REDIS_CACHE_ENABLED=true
REDIS_CACHE_TTL_SECONDS=600
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TLS=false

# =============================================================================
# LLM Configuration
# =============================================================================
DEFAULT_LLM_PROVIDER=openai
LLM_PROVIDER_FALLBACK_ORDER=openai,anthropic,llama
TEMPERATURE=0.7
MAX_TOKENS=1000

# OpenAI Specific
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo-16k

# Anthropic Specific
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# LLaMA Specific
LLAMA_MODEL_PATH=/app/models/llama-2-7b-chat.gguf
LLAMA_N_CTX=2048
LLAMA_N_GPU_LAYERS=0

# =============================================================================
# Vector Database Configuration
# =============================================================================
ELASTICSEARCH_URL=http://elasticsearch-service:9200
QDRANT_URL=http://qdrant-service:6333
CHROMA_PERSIST_DIRECTORY=/app/data/chroma

# =============================================================================
# External Service URLs
# =============================================================================
USER_SERVICE_URL=http://user-service:8001
QUESTION_SERVICE_URL=http://question-service:8002
API_GATEWAY_URL=http://api-gateway:8003

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=nlp-ai-microservice
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# Monitoring and Metrics
# =============================================================================
PROMETHEUS_METRICS_ENDPOINT=/metrics
OTEL_EXPORTER_OTLP_ENDPOINT=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_EXEMPT_PATHS=/health,/metrics,/docs,/openapi.json,/redoc

# =============================================================================
# Security
# =============================================================================
TLS_CERT_FILE=
TLS_KEY_FILE=

# =============================================================================
# Grafana Configuration
# =============================================================================
GRAFANA_PASSWORD=secure_password_here

# =============================================================================
# Kubernetes Specific
# =============================================================================
# Namespace
NAMESPACE=nlp-ai

# Resource Limits
CPU_REQUEST=500m
CPU_LIMIT=2000m
MEMORY_REQUEST=1Gi
MEMORY_LIMIT=4Gi

# HPA Configuration
HPA_MIN_REPLICAS=2
HPA_MAX_REPLICAS=20
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_CLASS=fast-ssd
DATA_VOLUME_SIZE=10Gi
REDIS_VOLUME_SIZE=5Gi

# =============================================================================
# Network Configuration
# =============================================================================
SERVICE_TYPE=ClusterIP
INGRESS_CLASS=nginx
DOMAIN=nlp-ai.yourdomain.com

# =============================================================================
# Development/Testing
# =============================================================================
# Uncomment for development
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# REDIS_CACHE_ENABLED=false



