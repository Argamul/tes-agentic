# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_ENABLED=true
# REDIS_CACHE_TTL_SECONDS=600

# Optional: Vector Database Configuration
# VECTOR_DB_PATH=./chroma_db

# ElasticSearch Configuration
# ELASTIC_URL=http://localhost:9200
# ELASTIC_API_KEY=
# ELASTIC_INDEX=documents

# Qdrant Configuration
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=
# QDRANT_COLLECTION=documents

# Auth Service Configuration
# AUTH_SERVICE_URL=http://localhost:9000
# AUTH_SERVICE_TIMEOUT_SECONDS=5
# AUTH_CACHE_ENABLED=true
# AUTH_CACHE_TTL_SECONDS=300

# RBAC Configuration
# RBAC_CONFIG_FILE=auth/rbac_config.json

# User/Question/API Gateway Services (REST)
# USER_SERVICE_URL=http://localhost:9001
# USER_SERVICE_TIMEOUT_SECONDS=5
# QUESTION_SERVICE_URL=http://localhost:9002
# QUESTION_SERVICE_TIMEOUT_SECONDS=5
# API_GATEWAY_URL=http://localhost:8080
# API_GATEWAY_TIMEOUT_SECONDS=5

# Optional: gRPC targets
# USER_SERVICE_GRPC_TARGET=localhost:50051
# QUESTION_SERVICE_GRPC_TARGET=localhost:50052

# Service discovery (Consul/Istio/K8s)
# CONSUL_HOST=localhost
# CONSUL_PORT=8500
# CONSUL_HTTP_TIMEOUT_SECONDS=2
# USE_ISTIO_DNS=false
# ISTIO_NAMESPACE=default
# K8S_CLUSTER_DOMAIN=cluster.local

# External API key(s) for routes under /external/
# Provide comma-separated values for multiple keys
# EXTERNAL_API_KEYS=admin-key-12345,teacher-key-67890,student-key-11111

# Advanced API Key Configuration (JSON format)
# EXTERNAL_API_KEYS_CONFIG=[{"key":"admin-key-12345","name":"Admin Key","roles":["admin"],"permissions":["external_api_access"]}]

# API Key Configuration File
# EXTERNAL_API_KEYS_FILE=auth/api_keys_config.json

# Enhanced Observability Configuration
# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:14268/api/traces
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAMESPACE=nlp-ai
OTEL_METRICS_ENABLED=true
SERVICE_VERSION=1.0.0

# Prometheus Metrics
PROMETHEUS_METRICS_ENDPOINT=/metrics
ENABLE_METRICS=true

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_STRATEGY=fixed_window
RATE_LIMIT_EXEMPT_PATHS=/health,/metrics,/docs,/openapi.json,/redoc
RATE_LIMIT_USER_LIMITS=admin-user:1000:60,teacher-user:500:60,student-user:100:60

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key
TLS_CA_FILE=./certs/ca.crt
TLS_MIN_VERSION=TLSv1.2
TLS_VERIFY_CLIENT=false
TLS_CERT_VALIDATION=true
TLS_HOSTNAME_VALIDATION=true
TLS_CIPHER_SUITES=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS

# ELK Stack Integration
ELASTIC_APM_ENABLED=false
ELASTIC_APM_SERVER_URL=http://localhost:8200
ELASTIC_APM_SECRET_TOKEN=

# Monitoring Services
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=200h

# Service Configuration
SERVICE_NAME=nlp-ai-microservice